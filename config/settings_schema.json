[
  {
    "name": "theme_info",
    "theme_name": "Skeleton",
    "theme_version": "0.1.0",
    "theme_author": "Shopify",
    "theme_documentation_url": "https://help.shopify.com/manual/online-store/themes",
    "theme_support_url": "https://support.shopify.com/"
  },
  {
    "name": "t:general.typography",
    "settings": [
      {
        "type": "header",
        "content": "t:general.fonts"
      },
      {
        "type": "font_picker",
        "id": "type_heading_font",
        "default": "cormorant_n4",
        "label": "t:labels.heading_font",
        "info": "t:info.heading_font"
      },
      {
        "type": "font_picker",
        "id": "type_body_font",
        "default": "inter_n4",
        "label": "t:labels.body_font",
        "info": "t:info.body_font"
      },
      {
        "type": "header",
        "content": "t:labels.font_sizes"
      },
      {
        "type": "range",
        "id": "base_font_size",
        "min": 14,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "t:labels.base_font_size",
        "default": 16,
        "info": "t:info.base_font_size"
      },
      {
        "type": "header",
        "content": "t:labels.letter_spacing"
      },
      {
        "type": "range",
        "id": "heading_letter_spacing",
        "min": -20,
        "max": 40,
        "step": 1,
        "unit": "px",
        "label": "t:labels.heading_letter_spacing",
        "default": 2,
        "info": "t:info.letter_spacing_heading"
      },
      {
        "type": "range",
        "id": "body_letter_spacing",
        "min": -10,
        "max": 20,
        "step": 1,
        "unit": "px",
        "label": "t:labels.body_letter_spacing",
        "default": 0,
        "info": "t:info.letter_spacing_body"
      }
    ]
  },
  {
    "name": "t:general.layout",
    "settings": [
      {
        "type": "select",
        "id": "max_page_width",
        "label": "t:labels.page_width",
        "options": [
          {
            "value": "90rem",
            "label": "t:options.page_width.narrow"
          },
          {
            "value": "110rem",
            "label": "t:options.page_width.wide"
          }
        ],
        "default": "90rem"
      },
      {
        "type": "range",
        "id": "min_page_margin",
        "min": 10,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "t:labels.page_margin",
        "default": 20
      }
    ]
  },
  {
    "name": "t:general.colors",
    "settings": [
      {
        "type": "color",
        "id": "background_color",
        "default": "#FFFFFF",
        "label": "t:labels.background"
      },
      {
        "type": "color",
        "id": "foreground_color",
        "default": "#333333",
        "label": "t:labels.foreground"
      },
      {
        "type": "range",
        "id": "input_corner_radius",
        "min": 0,
        "max": 10,
        "step": 1,
        "unit": "px",
        "label": "t:labels.input_corner_radius",
        "default": 4
      }
    ]
  }
]
